/**
 * PyCalendar Interface - AmÃ©liorations visuelles
 * Effets, animations et dÃ©tails raffinÃ©s
 */

/* ==================== ANIMATIONS GLOBALES AMÃ‰LIORÃ‰ES ==================== */

@keyframes shimmer {
    0% {
        background-position: -1000px 0;
    }
    100% {
        background-position: 1000px 0;
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0px);
    }
    50% {
        transform: translateY(-10px);
    }
}

@keyframes glow {
    0%, 100% {
        box-shadow: 0 0 5px var(--primary), 0 0 10px var(--primary);
    }
    50% {
        box-shadow: 0 0 20px var(--primary), 0 0 30px var(--primary);
    }
}

/* ==================== HEADER AMÃ‰LIORÃ‰ ==================== */

.main-header {
    transition: all var(--transition-base);
}

.main-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
        90deg,
        transparent,
        var(--primary) 50%,
        transparent
    );
    opacity: 0.3;
}

.logo-icon {
    transition: all var(--transition-base);
    cursor: pointer;
    animation: float 3s ease-in-out infinite;
}

.logo-icon:hover {
    transform: scale(1.1) rotate(10deg);
}

.logo-title {
    position: relative;
    display: inline-block;
}

.logo-title::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--france-blue), var(--france-red));
    transition: width var(--transition-base);
}

.logo-title:hover::after {
    width: 100%;
}

/* Header stats avec effet shimmer */
.header-stat {
    position: relative;
    overflow: hidden;
}

.header-stat::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
    );
    transition: left 0.5s;
}

.header-stat:hover::before {
    left: 100%;
}

.stat-value {
    transition: all var(--transition-base);
}

.header-stat:hover .stat-value {
    transform: scale(1.1);
    color: var(--primary-hover);
}

/* ==================== BOUTONS THÃˆME AMÃ‰LIORÃ‰S ==================== */

.theme-selector {
    position: relative;
    box-shadow: var(--shadow-sm);
}

.theme-btn {
    position: relative;
    overflow: hidden;
}

.theme-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: var(--primary-light);
    transform: translate(-50%, -50%);
    transition: width var(--transition-base), height var(--transition-base);
}

.theme-btn:hover::before {
    width: 100%;
    height: 100%;
}

.theme-btn.active {
    animation: glow 2s ease-in-out infinite;
}

.theme-icon {
    position: relative;
    z-index: 1;
    font-size: 1.5rem;
    transition: all var(--transition-base);
}

.theme-btn:hover .theme-icon {
    transform: rotate(180deg) scale(1.2);
}

/* ==================== SIDEBARS AMÃ‰LIORÃ‰ES ==================== */

.sidebar {
    box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.02);
}

.sidebar-header {
    position: relative;
}

.sidebar-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: var(--spacing-lg);
    right: var(--spacing-lg);
    height: 2px;
    background: linear-gradient(
        90deg,
        transparent,
        var(--primary),
        transparent
    );
}

.sidebar-title {
    transition: all var(--transition-base);
}

.sidebar:hover .sidebar-title {
    color: var(--primary);
}

/* ==================== BOUTONS SPORT ET VUE AMÃ‰LIORÃ‰S ==================== */

.sport-btn,
.view-btn {
    position: relative;
    overflow: hidden;
}

.sport-btn::before,
.view-btn::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, var(--france-blue), var(--france-red));
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform var(--transition-base);
}

.sport-btn:hover::before,
.view-btn:hover::before {
    transform: scaleY(1);
    transform-origin: top;
}

.sport-btn.active::before,
.view-btn.active::before {
    transform: scaleY(1);
}

.sport-icon,
.view-icon {
    transition: all var(--transition-bounce);
}

.sport-btn:hover .sport-icon,
.view-btn:hover .view-icon {
    transform: scale(1.3) rotate(360deg);
}

.sport-btn.active .sport-icon,
.view-btn.active .view-icon {
    animation: float 2s ease-in-out infinite;
}

/* ==================== OPTIONS D'AFFICHAGE AMÃ‰LIORÃ‰ES ==================== */

.option-item {
    position: relative;
}

.option-item::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 1px;
    background: var(--primary);
    transition: width var(--transition-base);
}

.option-item:hover::after {
    width: 100%;
}

.option-item input[type="checkbox"] {
    accent-color: var(--primary);
    cursor: pointer;
    transform: scale(1.2);
}

.option-item input[type="checkbox"]:checked {
    animation: pulse 0.3s ease-in-out;
}

/* ==================== BOUTONS D'ACTION AMÃ‰LIORÃ‰S ==================== */

.btn {
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:active::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--france-blue) 0%, #0066CC 100%);
    box-shadow: var(--shadow-primary), inset 0 -2px 5px rgba(0, 0, 0, 0.1);
}

.btn-primary:hover {
    background: linear-gradient(135deg, #0066CC 0%, var(--france-blue) 100%);
    box-shadow: var(--shadow-lg), inset 0 -2px 5px rgba(0, 0, 0, 0.2);
}

.btn-secondary {
    position: relative;
}

.btn-secondary::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(135deg, var(--france-blue), var(--france-red));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity var(--transition-base);
}

.btn-secondary:hover::after {
    opacity: 1;
}

/* ==================== FILTRES AMÃ‰LIORÃ‰S ==================== */

.filter-summary {
    position: relative;
    border-left: 3px solid var(--france-blue);
}

.summary-tags {
    gap: var(--spacing-sm);
}

.filter-tag {
    position: relative;
    padding-left: 1.5rem;
    animation: slideInRight 0.3s ease-out;
}

.filter-tag::before {
    content: 'ðŸ‡«ðŸ‡·';
    position: absolute;
    left: 0.25rem;
    font-size: 0.8rem;
}

.filter-section {
    transition: all var(--transition-base);
}

.filter-section:hover {
    transform: translateX(4px);
}

.filter-section-title {
    position: relative;
    padding-left: 1rem;
}

.filter-section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 60%;
    background: linear-gradient(180deg, var(--france-blue), var(--france-red));
    border-radius: 2px;
}

/* Radio et checkbox personnalisÃ©s */
.filter-option input[type="radio"],
.filter-option input[type="checkbox"] {
    appearance: none;
    width: 20px;
    height: 20px;
    border: 2px solid var(--border-color);
    border-radius: 4px;
    position: relative;
    cursor: pointer;
    transition: all var(--transition-base);
}

.filter-option input[type="radio"] {
    border-radius: 50%;
}

.filter-option input[type="radio"]:checked,
.filter-option input[type="checkbox"]:checked {
    background: linear-gradient(135deg, var(--france-blue), var(--france-red));
    border-color: var(--france-blue);
}

.filter-option input[type="radio"]:checked::after,
.filter-option input[type="checkbox"]:checked::after {
    content: 'âœ“';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-weight: bold;
    font-size: 14px;
}

.filter-option:hover input[type="radio"],
.filter-option:hover input[type="checkbox"] {
    border-color: var(--france-blue);
    box-shadow: 0 0 0 3px var(--primary-light);
}

/* Jours de la semaine amÃ©liorÃ©s */
.day-label {
    font-weight: 700;
    transition: all var(--transition-bounce);
}

.day-option:hover .day-label {
    transform: translateY(-3px) scale(1.1);
}

.day-option input[type="checkbox"]:checked + .day-label {
    animation: bounce 0.5s ease-in-out;
}

/* ==================== SELECT AMÃ‰LIORÃ‰S ==================== */

.filter-select {
    appearance: none;
    background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"%3e%3cpolyline points="6 9 12 15 18 9"%3e%3c/polyline%3e%3c/svg%3e');
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
}

.filter-select:hover {
    background-color: var(--bg-hover);
}

/* ==================== SEARCH BOX AMÃ‰LIORÃ‰E ==================== */

.search-box {
    position: relative;
}

.search-box::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, var(--france-blue), var(--france-red));
    border-radius: calc(var(--radius-md) + 2px);
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: -1;
}

.search-box:focus-within::before {
    opacity: 1;
}

.search-input {
    z-index: 1;
}

.search-icon {
    transition: all var(--transition-base);
}

.search-box:focus-within .search-icon {
    color: var(--primary);
    transform: scale(1.2);
}

/* ==================== SCROLLBAR PERSONNALISÃ‰E ==================== */

.sidebar-content::-webkit-scrollbar {
    width: 8px;
}

.sidebar-content::-webkit-scrollbar-track {
    background: linear-gradient(
        180deg,
        var(--bg-secondary) 0%,
        var(--bg-tertiary) 50%,
        var(--bg-secondary) 100%
    );
}

.sidebar-content::-webkit-scrollbar-thumb {
    background: linear-gradient(
        180deg,
        var(--france-blue) 0%,
        var(--france-white) 50%,
        var(--france-red) 100%
    );
    border-radius: 4px;
    border: 2px solid var(--bg-secondary);
}

.sidebar-content::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(
        180deg,
        var(--france-red) 0%,
        var(--france-white) 50%,
        var(--france-blue) 100%
    );
}

/* ==================== TOOLTIPS ==================== */

[title] {
    position: relative;
}

[title]:hover::after {
    content: attr(title);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    padding: var(--spacing-xs) var(--spacing-sm);
    background: var(--dark);
    color: white;
    font-size: var(--text-xs);
    white-space: nowrap;
    border-radius: var(--radius-sm);
    margin-bottom: 0.5rem;
    z-index: 1000;
    animation: slideDown 0.2s ease-out;
}

[title]:hover::before {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 6px solid transparent;
    border-top-color: var(--dark);
    z-index: 1000;
}

/* ==================== Ã‰TATS VIDES AMÃ‰LIORÃ‰S ==================== */

.empty-state {
    background: radial-gradient(
        circle at center,
        var(--bg-primary) 0%,
        var(--bg-secondary) 100%
    );
    border-radius: var(--radius-xl);
    margin: var(--spacing-xl);
}

.empty-state-icon {
    animation: float 3s ease-in-out infinite;
}

/* ==================== MODE COMPACT ==================== */

.compact-mode .header-stat {
    padding: var(--spacing-xs) var(--spacing-sm);
}

.compact-mode .sidebar-content {
    padding: var(--spacing-md);
}

.compact-mode .control-section {
    margin-bottom: var(--spacing-md);
}

/* ==================== ANIMATIONS DÃ‰SACTIVÃ‰ES ==================== */

.no-animations * {
    animation: none !important;
    transition: none !important;
}

/* ==================== PRINT STYLES ==================== */

@media print {
    .sidebar,
    .main-header,
    .theme-selector,
    .btn-icon {
        display: none !important;
    }
    
    .main-layout {
        grid-template-columns: 1fr;
    }
    
    .main-content {
        max-width: 100%;
    }
}
