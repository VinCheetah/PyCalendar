 * Design moderne avec patterns fran√ßais et interactions avanc√©es
 */

/* ==================== VARIABLES SUPPL√âMENTAIRES ==================== */

:root {
    /* Gradients fran√ßais renforc√©s */
    --gradient-tricolore-h: linear-gradient(90deg, 
        var(--france-blue) 0%, var(--france-blue) 33.33%, 
        var(--france-white) 33.33%, var(--france-white) 66.66%, 
        var(--france-red) 66.66%, var(--france-red) 100%);
    
    --gradient-tricolore-v: linear-gradient(180deg, 
        var(--france-blue) 0%, var(--france-blue) 33.33%, 
        var(--france-white) 33.33%, var(--france-white) 66.66%, 
        var(--france-red) 66.66%, var(--france-red) 100%);
    
    --gradient-france-soft: linear-gradient(135deg, 
        rgba(0, 85, 164, 0.05) 0%, 
        rgba(255, 255, 255, 0.05) 50%, 
        rgba(239, 65, 53, 0.05) 100%);
    
    /* Patterns fran√ßais subtils */
    --pattern-stripes: repeating-linear-gradient(
        45deg,
        transparent,
        transparent 10px,
        rgba(0, 85, 164, 0.03) 10px,
        rgba(0, 85, 164, 0.03) 20px
    );
    
    --pattern-dots: radial-gradient(
        circle at 2px 2px,
        rgba(0, 85, 164, 0.08) 1px,
        transparent 1px
    );
}

/* ==================== SIDEBAR DROITE - FILTRES ==================== */

.sidebar-right {
    position: relative;
    background: var(--gradient-france-soft), var(--bg-primary);
    box-shadow: -4px 0 20px rgba(0, 85, 164, 0.08);
}

.sidebar-right::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--gradient-tricolore-v);
    z-index: 10;
}

.sidebar-right .sidebar-content {
    background: var(--pattern-dots);
    background-size: 20px 20px;
}

/* ==================== FILTER SUMMARY ==================== */

.filter-summary {
    position: relative;
    background: linear-gradient(135deg, 
        rgba(0, 85, 164, 0.08) 0%, 
        rgba(239, 65, 53, 0.08) 100%);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
    border: 2px solid transparent;
    background-clip: padding-box;
}

.filter-summary::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: var(--radius-lg);
    padding: 2px;
    background: var(--gradient-blue-to-red);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
}

.summary-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
}

.summary-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.summary-title::before {
    content: 'üá´üá∑';
    font-size: 1.2rem;
    animation: float 3s ease-in-out infinite;
}

.btn-clear-filters {
    padding: var(--spacing-xs) var(--spacing-md);
    background: var(--gradient-blue-to-red);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
}

.btn-clear-filters::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn-clear-filters:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(0, 85, 164, 0.3);
}

.btn-clear-filters:active::before {
    width: 300px;
    height: 300px;
}

.summary-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    min-height: 32px;
}

.filter-tag {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-md);
    background: linear-gradient(135deg, 
        var(--france-blue) 0%, 
        var(--france-blue-dark) 100%);
    color: white;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    animation: slideInRight 0.3s ease-out;
    box-shadow: 0 2px 8px rgba(0, 85, 164, 0.3);
    position: relative;
    overflow: hidden;
}

.filter-tag::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.3), 
        transparent);
    transition: left 0.5s;
}

.filter-tag:hover::before {
    left: 100%;
}

.filter-tag::after {
    content: '√ó';
    margin-left: var(--spacing-xs);
    cursor: pointer;
    opacity: 0.7;
    transition: opacity var(--transition-base);
}

.filter-tag:hover::after {
    opacity: 1;
}

.no-filters {
    color: var(--text-secondary);
    font-style: italic;
    font-size: var(--text-sm);
}

/* ==================== FILTER SECTIONS ==================== */

.filter-section {
    margin-bottom: var(--spacing-xl);
    position: relative;
    transition: all var(--transition-base);
}

.filter-section:hover {
    transform: translateX(4px);
}

.filter-section::before {
    content: '';
    position: absolute;
    left: -var(--spacing-lg);
    top: 0;
    width: 3px;
    height: 100%;
    background: var(--gradient-tricolore-v);
    opacity: 0;
    transition: opacity var(--transition-base);
    border-radius: 2px;
}

.filter-section:hover::before {
    opacity: 1;
}

.filter-section-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--france-blue);
    margin-bottom: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    position: relative;
    padding-left: var(--spacing-md);
}

.filter-section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--gradient-blue-to-red);
    border-radius: 2px;
}

.filter-section-title::after {
    content: '';
    flex: 1;
    height: 2px;
    background: linear-gradient(90deg, 
        var(--france-blue) 0%, 
        transparent 100%);
    margin-left: var(--spacing-sm);
}

/* ==================== FILTER OPTIONS ==================== */

.filter-options {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.filter-option {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
    position: relative;
    background: transparent;
}

.filter-option::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-france-soft);
    border-radius: var(--radius-md);
    opacity: 0;
    transition: opacity var(--transition-base);
}

.filter-option:hover::before {
    opacity: 1;
}

.filter-option:hover {
    transform: translateX(4px);
}

/* Radio buttons personnalis√©s */
.filter-option input[type="radio"] {
    appearance: none;
    -webkit-appearance: none;
    width: 20px;
    height: 20px;
    border: 2px solid var(--france-blue);
    border-radius: 50%;
    position: relative;
    cursor: pointer;
    transition: all var(--transition-base);
    flex-shrink: 0;
    background: white;
}

.filter-option input[type="radio"]:hover {
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.1);
}

.filter-option input[type="radio"]:checked {
    background: var(--gradient-blue-to-red);
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.2);
}

.filter-option input[type="radio"]:checked::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: bounce 0.3s ease-out;
}

/* Checkboxes personnalis√©s */
.filter-option input[type="checkbox"] {
    appearance: none;
    -webkit-appearance: none;
    width: 20px;
    height: 20px;
    border: 2px solid var(--france-blue);
    border-radius: var(--radius-sm);
    position: relative;
    cursor: pointer;
    transition: all var(--transition-base);
    flex-shrink: 0;
    background: white;
}

.filter-option input[type="checkbox"]:hover {
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.1);
}

.filter-option input[type="checkbox"]:checked {
    background: var(--gradient-blue-to-red);
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.2);
}

.filter-option input[type="checkbox"]:checked::after {
    content: '‚úì';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-weight: bold;
    font-size: 14px;
    animation: bounce 0.3s ease-out;
}

.filter-option-label {
    flex: 1;
    font-size: var(--text-sm);
    color: var(--text-primary);
    font-weight: 500;
    transition: color var(--transition-base);
}

.filter-option:hover .filter-option-label {
    color: var(--france-blue);
}

.filter-option input:checked ~ .filter-option-label {
    color: var(--france-blue-dark);
    font-weight: 600;
}

/* ==================== FILTER SELECTS ==================== */

.filter-select {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    background: white;
    color: var(--text-primary);
    font-size: var(--text-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base);
    appearance: none;
    background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="%230055A4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"%3e%3cpolyline points="6 9 12 15 18 9"%3e%3c/polyline%3e%3c/svg%3e');
    background-repeat: no-repeat;
    background-position: right 0.75rem center;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
}

.filter-select:hover {
    border-color: var(--france-blue);
    background-color: var(--france-blue-ultra-light);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.1);
}

.filter-select:focus {
    outline: none;
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.2);
    background: linear-gradient(135deg, 
        rgba(0, 85, 164, 0.05) 0%, 
        rgba(255, 255, 255, 1) 100%);
}

/* ==================== DAY GRID ==================== */

.days-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
}

.day-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
}

.day-option input[type="checkbox"] {
    display: none;
}

.day-label {
    width: 100%;
    padding: var(--spacing-sm);
    text-align: center;
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--text-secondary);
    background: white;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-bounce);
    position: relative;
    overflow: hidden;
}

.day-label::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-tricolore-h);
    transform: scaleX(0);
    transition: transform var(--transition-base);
}

.day-label:hover {
    transform: translateY(-3px) scale(1.05);
    border-color: var(--france-blue);
    box-shadow: 0 4px 12px rgba(0, 85, 164, 0.2);
}

.day-option input[type="checkbox"]:checked + .day-label {
    background: var(--gradient-blue-to-red);
    color: white;
    border-color: var(--france-blue-dark);
    box-shadow: 0 4px 12px rgba(0, 85, 164, 0.3);
    animation: bounce 0.5s ease-out;
}

.day-option input[type="checkbox"]:checked + .day-label::before {
    transform: scaleX(1);
}

/* ==================== TIME INPUTS ==================== */

.time-inputs {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-sm);
}

.time-input-group {
    flex: 1;
}

.time-label {
    display: block;
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--france-blue);
    margin-bottom: var(--spacing-xs);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.time-input {
    width: 100%;
    padding: var(--spacing-sm);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    background: white;
    color: var(--text-primary);
    font-size: var(--text-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: 'Courier New', monospace;
}

.time-input:hover {
    border-color: var(--france-blue);
    background: var(--france-blue-ultra-light);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.1);
}

.time-input:focus {
    outline: none;
    border-color: var(--france-blue-dark);
    box-shadow: 0 0 0 4px rgba(0, 85, 164, 0.2);
    background: white;
}

/* ==================== SEARCH BOX ==================== */

.search-box {
    position: relative;
    margin-top: var(--spacing-sm);
}

.search-box::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: var(--gradient-blue-to-red);
    border-radius: calc(var(--radius-md) + 2px);
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: 0;
}

.search-box:focus-within::before {
    opacity: 1;
}

.search-input {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md) var(--spacing-sm) 2.5rem;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    background: white;
    color: var(--text-primary);
    font-size: var(--text-sm);
    transition: all var(--transition-base);
    position: relative;
    z-index: 1;
}

.search-input:hover {
    border-color: var(--france-blue);
    background: var(--france-blue-ultra-light);
}

.search-input:focus {
    outline: none;
    border-color: transparent;
    background: white;
}

.search-input::placeholder {
    color: var(--text-tertiary);
    font-style: italic;
}

.search-icon {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-secondary);
    transition: all var(--transition-base);
    z-index: 2;
    pointer-events: none;
}

.search-box:focus-within .search-icon {
    color: var(--france-blue-dark);
    transform: translateY(-50%) scale(1.2);
}

/* ==================== ANIMATIONS SP√âCIFIQUES ==================== */

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-5px);
    }
}

@keyframes bounce {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.2);
    }
}

/* ==================== RESPONSIVE ==================== */

@media (max-width: 1200px) {
    .days-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}

@media (max-width: 768px) {
    .sidebar-right {
        position: fixed;
        right: -100%;
        top: 0;
        bottom: 0;
        z-index: 1000;
        transition: right var(--transition-base);
    }
    
    .sidebar-right.visible {
        right: 0;
    }
    
    .days-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}
